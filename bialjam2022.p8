-- main

function _init()
 startgame()
end

function _update()
	if mode=="game" then
		update_game()
	end
end

function _draw()
 if mode=="game" then
 	draw_game()
 end
end

function startgame()
 mode="game" 
	
	bgstrips={}
	for i=-8,127,8 do
		add(bgstrips,{y=i})
	end
end
